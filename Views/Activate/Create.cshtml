@model GameBuildPortal.Models.ActivateGame

@{
    ViewBag.Title = "Activar juego";
}

<h2>View</h2>

@using (Html.BeginForm("Create", "Activate", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
