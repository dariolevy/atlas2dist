@using Microsoft.AspNet.Identity
@model GameBuildPortal.Models.LayoutViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@Model.Configuracion.titulo | Admin</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/admin/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Content/admin/fonts/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/admin/css/animate.min.css" rel="stylesheet">

    <!-- Custom styling plus plugins -->
    <link href="~/Content/admin/css/custom.css" rel="stylesheet">
    <link href="~/Content/admin/css/icheck/flat/green.css" rel="stylesheet" />
    <!-- editor -->
    <link href="~/Content/admin/css/editor/external/google-code-prettify/prettify.css" rel="stylesheet">
    <link href="~/Content/admin/css/editor/index.css" rel="stylesheet">
    <!-- select2 -->
    <link href="~/Content/admin/css/select/select2.min.css" rel="stylesheet">
    <!-- switchery -->
    <link href="~/Content/admin/css/switchery/switchery.min.css" rel="stylesheet"/>

    <!--[if lt IE 9]>
      <script src="../assets/js/ie8-responsive-file-warning.js"></script>
    <![endif]-->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body class="nav-md" ng-app="atlas2">

    <div class="container body">

        <div class="main_container">

            <!-- lef column -->
            <div class="col-md-3 left_col">

                <div class="left_col scroll-view">

                    <div class="navbar nav_title" style="border: 0;">
                        <a href="#" class="site_title"><i class="fa fa-gamepad"></i> <span>Admin</span></a>
                    </div>
                    <div class="clearfix"></div>

                    <!-- menu prile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_info">
                            <span>Bienvenido,</span>
                            <h2>@User.Identity.GetUserName()</h2>
                        </div>
                    </div>
                    <!-- /menu prile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <ul class="nav side-menu">
                                <li>
                                    <a href="#/"><i class="fa fa-home"></i> Dashboard </a>
                                </li>
                            </ul>
                            <ul class="nav side-menu">
                                <li>
                                    <a href="#/configuracion"><i class="fa fa-code"></i> Configuracion </a>
                                </li>
                            </ul>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-archive"></i> Entidades <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none">
                                        <li>
                                            <a href="#/mapa">Mapa</a>
                                        </li>
                                        <li>
                                            <a href="#/recurso">Recursos</a>
                                        </li>
                                        <li>
                                            <a href="#/destacamento">Destacamentos</a>
                                        </li>
                                        <li>
                                            <a href="#/edificio">Edificios</a>
                                        </li>
                                        <li>
                                            <a href="#/investigacion">Investigaciones</a>
                                        </li>
                                        <li>
                                            <a href="#/dependencia">Dependencias</a>
                                        </li>
                                        <li>
                                            <a href="#/interaccion">Iteracciones</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                            
                        </div>

                    </div>
                    <!-- /sidebar menu -->

                </div>

            </div>
            <!-- /lef column -->
            <!-- top navigation -->
            <div class="top_nav">

                <div class="nav_menu">
                    <nav class="" role="navigation">
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        
                        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <ul class="nav navbar-nav navbar-right">
                                <li class="">
                                    <a cass="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        @User.Identity.GetUserName()
                                        <span class="fa fa-angle-down"></span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-usermenu pull-right">
                                        <li>
                                            <a> Profile</a>
                                        </li>
                                        <li>
                                            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out pull-right"></i> Log Out</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        }

                    </nav>

                </div>

            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">

                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12" ng-view>

                    </div>
                </div>

            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    .NET - Grupo 15
                </div>
            </footer>
            <!-- /footer content -->

        </div>
    </div>

    <script src="~/Scripts/admin/jquery.min.js"></script>

    <script src="~/Scripts/admin/angular.min.js"></script>
    <script src="~/Scripts/admin/angular-route.min.js"></script>
  
    <!-- app -->
    <script type="text/javascript" src="~/SPA/admin/app.js"></script>

    <!-- services -->
    <script type="text/javascript" src="~/SPA/admin/services/dashboard.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/configuracion.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/recurso.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/mapa.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/investigacion.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/destacamento.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/dependencia.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/edificio.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/interaccion.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/producto.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/costo.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/capacidad.js"></script>
    <script type="text/javascript" src="~/SPA/admin/services/produce.js"></script>

    <!-- controllers -->
    <script type="text/javascript" src="~/SPA/admin/controllers/dashboard.js"></script>
    <script type="text/javascript" src="~/SPA/admin/controllers/configuracion.js"></script>
    <script type="text/javascript" src="~/SPA/admin/controllers/recurso.js"></script>
    <script type="text/javascript" src="~/SPA/admin/controllers/mapa.js"></script>
    <script type="text/javascript" src="~/SPA/admin/controllers/investigacion.js"></script>
    <script type="text/javascript" src="~/SPA/admin/controllers/destacamento.js"></script>
    <script type="text/javascript" src="~/SPA/admin/controllers/edificio.js"></script>
    <script type="text/javascript" src="~/SPA/admin/controllers/dependencia.js"></script>
    <script type="text/javascript" src="~/SPA/admin/controllers/interaccion.js"></script>

    <script type="text/javascript" src="~/Scripts/admin/bootstrap.min.js"></script>
   
    <!-- bootstrap progress js -->
    <script src="~/Scripts/admin/progressbar/bootstrap-progressbar.min.js"></script>

    <!-- form wizard -->
    <script type="text/javascript" src="~/Scripts/admin/wizard/jquery.smartWizard.js"></script>

    <!-- tags -->
    <script src="~/Scripts/admin/tags/jquery.tagsinput.min.js"></script>
    <!-- switchery -->
    <script src="~/Scripts/admin/switchery/switchery.min.js"></script>
    <!-- daterangepicker -->
    <script type="text/javascript" src="~/Scripts/admin/moment/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/admin/datepicker/daterangepicker.js"></script>
    <!-- richtext editor -->
    <script src="~/Scripts/admin/editor/bootstrap-wysiwyg.js"></script>
    <script src="~/Scripts/admin/editor/external/jquery.hotkeys.js"></script>
    <script src="~/Scripts/admin/editor/external/google-code-prettify/prettify.js"></script>
    <!-- select2 -->
    <script src="~/Scripts/admin/select/select2.full.js"></script>
    <!-- form validation -->
    <script type="text/javascript" src="~/Scripts/admin/parsley/parsley.min.js"></script>
    <!-- textarea resize -->
    <script src="~/Scripts/admin/textarea/autosize.min.js"></script>

    <!-- Autocomplete -->
    <script type="text/javascript" src="~/Scripts/admin/autocomplete/countries.js"></script>
    <script src="~/Scripts/admin/autocomplete/jquery.autocomplete.js"></script>

    <!-- PNotify -->
    <script type="text/javascript" src="~/Scripts/admin/notify/pnotify.core.js"></script>
    <script type="text/javascript" src="~/Scripts/admin/notify/pnotify.buttons.js"></script>
    <script type="text/javascript" src="~/Scripts/admin/notify/pnotify.nonblock.js"></script>
    
    <script type="text/javascript" src="~/Scripts/admin/custom.js"></script>

    <!-- pace -->
    <script src="~/Scripts/admin/pace/pace.min.js"></script>

    <!-- dropzone -->
    <script src="~/Scripts/admin/dropzone/dropzone.js"></script>

    <!-- chart -->
    <script src="~/Scripts/admin/moris/raphael-min.js"></script>
    <script src="~/Scripts/admin/moris/morris.min.js"></script>
</body>

</html>
